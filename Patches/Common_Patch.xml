<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<!-- WindTurbine size -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "WindTurbine"]/size</xpath>
		<value>
            <size>(5,2)</size>
		</value>
	</Operation>
	
	<!-- Add ReinforcedBarrel craftable -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]</xpath>
		<value>
			<costList>
				<Steel>250</Steel>
			</costList>
			<recipeMaker>
				<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
				<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
				<workSkill>Crafting</workSkill>
				<effectWorking>Smith</effectWorking>
				<recipeUsers>
					<li>TableMachining</li>
				</recipeUsers>
				<skillRequirements>
					<Crafting>5</Crafting>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]/statBases</xpath>
		<value>
			<WorkToMake>700</WorkToMake>
		</value>
	</Operation>
	
	<!-- Leather patch market value -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Leather_Human"]/statBases/MarketValue</xpath>
		<value>
			<MarketValue>1.2</MarketValue>
		</value>
	</Operation>
	
	<!-- Remove ArchotechStructureStudiable Effect -->
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/ThingDef[defName="MajorArchotechStructureStudiable"]/comps/li[mote="Mote_PsychicConditionCauserEffect"]</xpath>
	</Operation>
	
</Patch>