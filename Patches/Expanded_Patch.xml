<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>Combat Extended</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Gun_KPV"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/magazineSize</xpath>
					<value>
						<magazineSize>120</magazineSize>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>Combat Extended Melee</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="CE_Melee_WraithBlade"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>5000</MarketValue>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>MendAndRecycle</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="MendingKit"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>1</MarketValue>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>[KV] RimFridge</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name="FridgeBase"]/building</xpath>
					<value>
						<uninstallWork>350</uninstallWork>
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="LWM_DS_RimFridge_Refrigerator"]/minifiedDef</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="LWM_DS_RimFridge_Refrigerator"]/thingCategories</xpath>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="LWM_DS_RimFridge_Refrigerator"]</xpath>
					<value>
						<minifiedDef>MinifiedThing</minifiedDef>
						<building>
							<uninstallWork>350</uninstallWork>
						</building>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RimFridge_SingleRefrigerator"]</xpath>
					<value>
						<minifiedDef>MinifiedThing</minifiedDef>
						<building>
							<uninstallWork>350</uninstallWork>
						</building>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RimFridge_Refrigerator"]</xpath>
					<value>
						<minifiedDef>MinifiedThing</minifiedDef>
						<building>
							<uninstallWork>350</uninstallWork>
						</building>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RimFridge_QuadRefrigerator"]</xpath>
					<value>
						<minifiedDef>MinifiedThing</minifiedDef>
						<building>
							<uninstallWork>350</uninstallWork>
						</building>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
</Patch>