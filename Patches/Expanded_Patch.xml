<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>Combat Extended</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Gun_KPV"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/magazineSize</xpath>
					<value>
						<magazineSize>120</magazineSize>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>Combat Extended Melee</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="CE_Melee_WraithBlade"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>5000</MarketValue>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods><li>MendAndRecycle</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="MendingKit"]/statBases/MarketValue</xpath>
					<value>
						<MarketValue>1</MarketValue>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- Add ReinforcedBarrel craftable -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]</xpath>
		<value>
			<costList>
				<Steel>250</Steel>
			</costList>
			<recipeMaker>
				<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
				<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
				<workSkill>Crafting</workSkill>
				<effectWorking>Smith</effectWorking>
				<recipeUsers>
					<li>TableMachining</li>
				</recipeUsers>
				<skillRequirements>
					<Crafting>5</Crafting>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]/statBases</xpath>
		<value>
			<WorkToMake>700</WorkToMake>
		</value>
	</Operation>
	
	<!-- Leather patch -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Leather_Human"]/statBases/MarketValue</xpath>
		<value>
			<MarketValue>1.2</MarketValue>
		</value>
	</Operation>
	
	<!-- Remove ArchotechStructureStudiable Effect -->
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/ThingDef[defName="MajorArchotechStructureStudiable"]/comps/li[mote="Mote_PsychicConditionCauserEffect"]</xpath>
	</Operation>
	
</Patch>