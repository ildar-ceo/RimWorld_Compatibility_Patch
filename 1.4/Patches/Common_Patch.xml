<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<!-- WindTurbine size -->
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "WindTurbine"]/size</xpath>
		<value>
            <size>(5,2)</size>
		</value>
	</Operation>
	
	<!-- Add ReinforcedBarrel craftable -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]</xpath>
		<value>
			<costList>
				<Steel>250</Steel>
			</costList>
			<recipeMaker>
				<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
				<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
				<workSkill>Crafting</workSkill>
				<effectWorking>Smith</effectWorking>
				<recipeUsers>
					<li>TableMachining</li>
				</recipeUsers>
				<skillRequirements>
					<Crafting>5</Crafting>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ReinforcedBarrel"]/statBases</xpath>
		<value>
			<WorkToMake>700</WorkToMake>
		</value>
	</Operation>
	
	<!-- Leather patch market value -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Leather_Human"]/statBases/MarketValue</xpath>
		<value>
			<MarketValue>1.2</MarketValue>
		</value>
	</Operation>
	
	<!-- Remove ArchotechStructure Effect -->
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/ThingDef[defName="MajorArchotechStructureStudiable" or defName="GrandArchotechStructure"]/comps/li[mote="Mote_PsychicConditionCauserEffect"]</xpath>
	</Operation>
	
	<!-- Disable tribes raids in endgame -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/raidCommonalityFromPointsCurve</xpath>
		<value>
			<raidCommonalityFromPointsCurve>
				<points>
					<li>(300,  0)</li>
					<li>(700,  1)</li>
					<li>(1400, 1.8)</li>
					<li>(3500, 0)</li>
				</points>
			</raidCommonalityFromPointsCurve>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/maxPawnCostPerTotalPointsCurve</xpath>
		<value>
			<maxPawnCostPerTotalPointsCurve>
				<points>
					<li>(0,35)</li>
					<li>(70, 50)</li>
					<li>(800, 100)</li>
					<li>(1300, 150)</li>
					<li>(2000, 300)</li>
					<li>(3500, 0)</li>
				</points>
			</maxPawnCostPerTotalPointsCurve>
		</value>
	</Operation>
	
	<!-- Rottable BodyPartNatural -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[@Name="BodyPartNaturalBase"]</xpath>
		<value>
			<tickerType>Rare</tickerType>
            <comps>
				<li Class="CompProperties_Rottable">
					<daysToRotStart>5</daysToRotStart>
					<rotDestroys>true</rotDestroys>
				</li>
			</comps>
		</value>
	</Operation>
	
	<!-- Add Batteries research to default Scenario -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ScenarioDef[defName="Crashlanded" or defName="TheRichExplorer"]/scenario/parts</xpath>
		<value>
			<li Class="ScenPart_StartingResearch">
				<def>StartingResearch</def>
				<project>Batteries</project>
			</li>
		</value>
	</Operation>
	
	<!-- Mineable -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MineableSteel" or defName="MineableSilver" or defName="MineableGold" or defName="MineableUranium" or defName="MineablePlasteel"]/building/mineableYield</xpath>
		<value>
			<mineableYield>65</mineableYield>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="MineableComponentsIndustrial"]/building/mineableYield</xpath>
		<value>
			<mineableYield>7</mineableYield>
		</value>
	</Operation>
	
	<!-- Add AIPersonaCore -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>
			<ResearchProjectDef ParentName="ShipResearchProjectBase">
				<defName>CreateComputerCore</defName>
				<label>AI Computer Core</label>
				<description>Create AI Computer Core</description>
				<baseCost>2000</baseCost>
				<techLevel>Spacer</techLevel>
				<prerequisites>
					<li>ShipComputerCore</li>
				</prerequisites>
			</ResearchProjectDef>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="AIPersonaCore"]</xpath>
		<value>
			<costList>
				<Gold>25</Gold>
				<Steel>100</Steel>
				<Plasteel>150</Plasteel>
				<ComponentSpacer>20</ComponentSpacer>
				<ComponentIndustrial>50</ComponentIndustrial>
			</costList>
			<recipeMaker>
				<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
				<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
				<workSkill>Crafting</workSkill>
				<effectWorking>Smith</effectWorking>
				<researchPrerequisite>CreateComputerCore</researchPrerequisite>
				<recipeUsers>
					<li>FabricationBench</li>
				</recipeUsers>
				<skillRequirements>
					<Crafting>12</Crafting>
					<Intellectual>5</Intellectual>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="AIPersonaCore"]/statBases/MarketValue</xpath>
		<value>
			<MarketValue>1500</MarketValue>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="AIPersonaCore"]/statBases</xpath>
		<value>
			<WorkToMake>15000</WorkToMake>
		</value>
	</Operation>
	
	<!-- Add minifiedDef -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="CommsConsole"]</xpath>
		<value>
			<minifiedDef>MinifiedThing</minifiedDef>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="FabricationBench" or defName="HiTechResearchBench" or defName="BiofuelRefinery"]/minifiedDef</xpath>
		<value>
			<minifiedDef>MinifiedThing</minifiedDef>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="HiTechResearchBench" or defName="FabricationBench" or defName="MultiAnalyzer" or defName="CommsConsole"]/building</xpath>
		<value>
			<uninstallWork>350</uninstallWork>
		</value>
	</Operation>
	
	<!-- Works -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/WorkGiverDef[defName="Refuel" or defName="RearmTurrets" or defName="TakeBeerOutOfFermentingBarrel" or defName="FillFermentingBarrel"]/workType</xpath>
		<value>
			<workType>BasicWorker</workType>
		</value>
	</Operation>
	
	<!-- ID: 2023507013 -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Vanilla Expanded Framework</li></mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName="IP_RemoveProduct"]/workType</xpath>
					<value>
						<workType>BasicWorker</workType>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<!-- ID: 836308268 -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Dubs Bad Hygiene</li></mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName="emptySepticTank" or defName="LoadWashing" or defName="UnloadWashing" or defName="RefillWater"]/workType</xpath>
					<value>
						<workType>BasicWorker</workType>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<!-- ID: 2633514537 -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>[SYR] Processor Framework</li></mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName="EmptyProcessor" or defName="FillProcessor"]/workType</xpath>
					<value>
						<workType>BasicWorker</workType>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<!-- ID: 2007061826 (VGP Vegetable Garden) -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>VGP Vegetable Garden</li></mods>
		
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName="DoBillsHaulBambooCampfire"]/workType</xpath>
					<value>
						<workType>BasicWorker</workType>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- Set count factions to zero for Tribal -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/requiredCountAtGameStart</xpath>
		<value>
			<requiredCountAtGameStart>0</requiredCountAtGameStart>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]</xpath>
		<value>
			<startingCountAtWorldCreation>0</startingCountAtWorldCreation>
		</value>
	</Operation>
	
	<!-- Factions patch -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Biotech</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="OutlanderRough"]</xpath>
					<value>
						<requiredCountAtGameStart>1</requiredCountAtGameStart>
						<maxCountAtGameStart>1</maxCountAtGameStart>
						<startingCountAtWorldCreation>1</startingCountAtWorldCreation>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="OutlanderRoughPig" or defName="PirateYttakin"]</xpath>
					<value>
						<requiredCountAtGameStart>0</requiredCountAtGameStart>
						<startingCountAtWorldCreation>0</startingCountAtWorldCreation>
					</value>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/FactionDef[defName="OutlanderRoughPig"]/replacesFaction</xpath>
				</li>
				
				<!--
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="OutlanderRough"]/xenotypeSet/xenotypeChances</xpath>
					<value>
						<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.25</Yttakin>
						<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.25</Pigskin>
						<Sanguophage MayRequire="Ludeon.RimWorld.Biotech">0.05</Sanguophage>
					</value>
				</li>
				-->
			</operations>
		</match>
	</Operation>
	
	<!-- Factions patch -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Royalty</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="Empire"]/xenotypeSet/xenotypeChances</xpath>
					<value>
						<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.25</Yttakin>
						<Sanguophage MayRequire="Ludeon.RimWorld.Biotech">0.15</Sanguophage>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- 2723801948 -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Vanilla Factions Expanded - Pirates</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/FactionDef[defName="VFEP_Junkers" or defName="VFEP_JunkersRaidLootMaker"]/requiredCountAtGameStart</xpath>
					<value>
						<requiredCountAtGameStart>0</requiredCountAtGameStart>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="VFEP_Junkers" or defName="VFEP_JunkersRaidLootMaker"]</xpath>
					<value>
						<startingCountAtWorldCreation>0</startingCountAtWorldCreation>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="VFEP_Mercenaries"]/xenotypeSet/xenotypeChances</xpath>
					<value>
						<Impid MayRequire="Ludeon.RimWorld.Biotech">0.1</Impid>
						<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.25</Yttakin>
						<Pigskin MayRequire="Ludeon.RimWorld.Biotech">0.25</Pigskin>
						<Sanguophage MayRequire="Ludeon.RimWorld.Biotech">0.05</Sanguophage>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
</Patch>