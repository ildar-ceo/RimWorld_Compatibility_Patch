	<!-- Biotech -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Biotech</li></mods>
		
		<!-- ID: 1123043922 -->
		<match Class="PatchOperationFindMod">
			<mods><li>Sparkling Worlds - Full Mod</li></mods>
			
			<match Class="PatchOperationSequence">
				<operations>
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs/FactionDef[defName="BlueMoonCorpSW"]</xpath>
						<value>
							<xenotypeSet>
								<xenotypeChances>
									<Impid MayRequire="Ludeon.RimWorld.Biotech">0.5</Impid>
									<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.5</Neanderthal>
									<Hussar MayRequire="Ludeon.RimWorld.Biotech">0.5</Hussar>
									<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.5</Yttakin>
								</xenotypeChances>
							</xenotypeSet>
						</value>
					</li>
					
				</operations>
			</match>
		</match>
	</Operation>
	
	<!-- PawnKinds -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/PawnKindDef[defName="Town_Guard" or defName="Town_Councilman" or defName="Pirate" or defName="Scavenger"]/weaponTags</xpath>
		<value>
			<li>IndustrialGunAdvanced</li>
			<li>IndustrialGunRedesign</li>
			<li>SpacerGun</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Town_Guard" or defName="Town_Councilman" or defName="Pirate" or defName="Scavenger"]/weaponMoney</xpath>
		<value>
			<weaponMoney>
				<min>700</min>
				<max>3000</max>
			</weaponMoney>
		</value>
	</Operation>
	
	<!-- 2723801948 -->
