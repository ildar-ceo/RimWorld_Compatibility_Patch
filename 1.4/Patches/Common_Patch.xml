						<xenotypeChances>
							<Impid MayRequire="Ludeon.RimWorld.Biotech">0.25</Impid>
							<Neanderthal MayRequire="Ludeon.RimWorld.Biotech">0.25</Neanderthal>
							<Hussar MayRequire="Ludeon.RimWorld.Biotech">0.25</Hussar>
							<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.25</Yttakin>
							<Waster MayRequire="Ludeon.RimWorld.Biotech">0.25</Waster>
							<Dirtmole MayRequire="Ludeon.RimWorld.Biotech">0.05</Dirtmole>
						</xenotypeChances>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
	<!-- Empire xenotype patch -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>Royalty</li></mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName="Empire"]/xenotypeSet/xenotypeChances</xpath>
					<value>
						<Impid MayRequire="Ludeon.RimWorld.Biotech">0.25</Impid>
						<Yttakin MayRequire="Ludeon.RimWorld.Biotech">0.25</Yttakin>
						<Sanguophage MayRequire="Ludeon.RimWorld.Biotech">0.05</Sanguophage>
